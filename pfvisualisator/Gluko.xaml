<Window x:Class="pfVisualisator.Gluko"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ko="clr-namespace:pfVisualisator"
        Title="С очередным глюком Вас!!!" Height="200" Width="800">
    <Window.Resources>
        <ObjectDataProvider x:Key="ObjGluko" ObjectType="{x:Type ko:vpfGluka}">
        </ObjectDataProvider>
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource ObjGluko}}">
        <TextBlock Name="gtext" Text= "{Binding Path=Explanation}" FontWeight="Bold" TextAlignment="Center" FontSize="16" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFCE1A51" Offset="0.246" />
                <GradientStop Color="#FFDE6047" Offset="0.829" />
            </RadialGradientBrush>
        </Grid.Background>
    </Grid>
</Window>

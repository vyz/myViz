<Window x:Class="pfVisualisator.PozoWinda"
        x:Name="wPozoinda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:pfVisualisator"
        Title="PozoWinda" Height="438" Width="1180">
    <Grid Name="Grido">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Viewbox Name="BxBoard" Grid.Column="0">
            <local:Borda x:Name="pfBoard"></local:Borda>
            <Viewbox.ContextMenu>
                <ContextMenu Name="vbme">
                    <MenuItem Header="Открыть текущую позицию в отдельном окне" Click="PosoWindo_Click"/>
                </ContextMenu>
            </Viewbox.ContextMenu>
        </Viewbox>
        <GridSplitter Name="SplitIn1" Grid.Column="1" HorizontalAlignment="Left" Width="5"></GridSplitter>
        <StackPanel Name="GInfo" Grid.Column="1">
            <TextBlock Name="Heado" Text="{Binding Path=BigNamo}" HorizontalAlignment="Center"></TextBlock>
            <TextBox Name="Fena" Text="{Binding Path=Fena}" ></TextBox>
            <TextBox Name="Descro" Text="{Binding Path=Descripto}" ></TextBox>
            <TextBlock Name="AvaMove" Text="{Binding Path=Selfa.AvaMovo}" HorizontalAlignment="Left" FontFamily="Courier New"></TextBlock>
            <TextBox Name="Material" Text="{Binding Mode=OneWay, Path=Material}" HorizontalAlignment="Center"></TextBox>
            <StackPanel HorizontalAlignment="Center" Name="sPanManagegViewPosition" VerticalAlignment="Top" Orientation="Horizontal">
                <Button Content="Analizo" Name="AnaloBtn" Width="75" Click="AnaloBtn_Click" />
                <Label Name="pSdvigLb1"></Label>
                <Button Content="SaveXML" Name="xSavoBtn" Width="75" Click="xSavoBtn_Click" />
            </StackPanel>
            <TextBox Name="AnaRes" Text="{Binding Path=AnaRes, Mode=OneWay}" TextChanged="AnaRes_TextChanged"></TextBox>
            <StackPanel Name="spVarainto" CanVerticallyScroll="True" Orientation="Horizontal">
                <Button Name="pzNext"  Content="Next" Width="50" Click="pzNextBtn_Click" />
                <Border Margin="10" Padding="10" BorderBrush="SteelBlue" BorderThickness="2" CornerRadius="5" MaxWidth="350" >
                    <RichTextBox Name="VibroVara" FontSize="12" MaxWidth="240" MaxHeight="600">
                        <FlowDocument Name="FloDoca">
                        </FlowDocument>
                    </RichTextBox>
                </Border>
                <Button Name="pzPrev"  Content="Prev" Width="50" Click="pzPrevBtn_Click" />
            </StackPanel>
            <StackPanel Name="stackPanelValues" HorizontalAlignment="Center" VerticalAlignment="Top">
                <DataGrid Name="ValueGrido" ItemsSource="{Binding Mode=OneWay, NotifyOnTargetUpdated=True}" AutoGenerateColumns="False" FrozenColumnCount="1" IsReadOnly="True"
                  CanUserResizeRows="False" RowHeight="22" SelectionChanged="ValueGrido_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Цифра" Binding="{Binding Valo}" />
                        <DataGridTextColumn Header="Ранго" Binding="{Binding Rango}" />
                        <DataGridTextColumn Header="Мова" Binding="{Binding MovoVan}" />
                        <DataGridTextColumn Header="Глубь" Binding="{Binding Glub}" />
                        <DataGridTextColumn Header="Узелки" Binding="{Binding Nody}" />
                        <DataGridTextColumn Header="Минуто" Binding="{Binding Duma}" />
                        <DataGridTextColumn Header="Двиго" Binding="{Binding Dvigatel}" />
                        <DataGridTextColumn Header="Дато" Binding="{Binding DatoStroke}" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

        </StackPanel>
    </Grid>       
</Window>
